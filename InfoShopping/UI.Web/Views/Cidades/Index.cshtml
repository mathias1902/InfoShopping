@model IEnumerable<UI.Web.Models.CidadeModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Nome)
            </td>
            <td>
                <a asp-action="Index" asp-controller="Enderecos" asp-route-id="@item.CidadeId">Enderecos</a> |
                <a asp-action="Edit" asp-route-id="@item.CidadeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CidadeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CidadeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
